# Optimize npm installation for Railway
production=true
fund=false
audit=false
progress=false
prefer-offline=true
cache-max=0
package-lock-only=false
no-cache=true
cache=false

# Reduce network requests
fetch-retries=1
fetch-retry-factor=0
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Optimize for CI/CD
ci=true

# Disable problematic cache operations
cache=false
no-cache=true
